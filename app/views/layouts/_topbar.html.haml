%header
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        #topbar
          %a.brand{:href => root_url} TURNCHANNEL
          .search-bar
            .input-append
              %form#global-search{:method => 'post', :action => '/tracks/search/'}
                %input{:class=>"span2", :id=>"global-search-field", :type=>"text", :value => (@q || '')}
                %span{:class=>"add-on"}
                  %i.icon-search
          %ul.nav#topbar-nav
            %li= link_to 'Discover', '/discover', :class => 'topbar-link'
          .sign-in
            - if user_signed_in?
              .dropdown
                %a{:class=>"dropdown-toggle", :id=>"drop4", :role=>"button", :'data-toggle'=>"dropdown", :href=>"#"}
                  = current_user.name
                  %b.caret
                %ul{:id=>"menu1", :class=>"dropdown-menu", :role=>"menu", :'aria-labelledby'=>"drop4"}
                  %li
                    = link_to 'Sign Out', destroy_user_session_path, :method => :delete, :tabindex => '-1', :target => '_blank'
            - else
              %a.register-btn.btn.btn-primary{:href => user_omniauth_authorize_path(:facebook), :target => '_blank'} Login
