%header
  .navbar
    .navbar-inner
      .container
        #topbar
          %a.brand{:href => root_url} TURNCHANNEL
          .search-bar
            .input-append
              %form#global-search{:method => 'post', :action => '/mixes/search/'}
                %input{:class=>"span2", :id=>"global-search-field", :type=>"text"}
                %span{:class=>"add-on"}
                  %i.icon-search
          %ul.nav#topbar-nav
            %li= link_to 'Discover', '/discover', :class => 'topbar-link'
          .sign-in
            - if user_signed_in?
              .dropdown
                %a{:class=>"dropdown-toggle", :id=>"drop4", :role=>"button", :'data-toggle'=>"dropdown", :href=>"#"}
                  = current_user.name
                  %b.caret
                %ul{:id=>"menu1", :class=>"dropdown-menu", :role=>"menu", :'aria-labelledby'=>"drop4"}
                  %li
                    = link_to 'Sign Out', destroy_user_session_path, :method => :delete, :tabindex => '-1'
            - else
              = link_to 'Login', '#sign-in-modal', :'data-toggle'=>"modal", :target => '_blank'
              or
              = link_to 'Sign Up', '#sign-up-modal', :'data-toggle'=>"modal", :target => '_blank'
