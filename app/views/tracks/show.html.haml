.player
  .player-container
    .player-title
      %h3= @mix.name
      .mix-buttons
        %button.btn#mix-fav-btn{:href => "/mixes/#{@mix.id}/toggle_fav", :title => "Add this mix to my Favorites"}
          %i.icon-heart
    .player-video
      #ytapiplayer
        %iframe{:width=>"960", :height=>"487", :src=>"http://www.youtube.com/v/#{@remote_ids.first}?version=3&enablejsapi=1&showinfo=0&modestbranding=1&autohide=1&iv_load_policy=3&autoplay=1&playlist=#{@remote_ids[1..-1].join(',')}", :frameborder=>"0", :allowfullscreen=>"false"}
      .player-details
        .player-current-track
          %span Currently Playing:
          = @tracks.first.title
        .player-tags
          %span Tags:
          - @mix.tags.each do |tag|
            %span.label.label-inverse= tag.name
        .player-length
          %span Length:
          - i = 0
          - @mix.tracks.each{|t|i+=t.duration}
          = "#{i} (#{@mix.tracks.size} tracks)"
        .player-description
          %span Description:
          = @mix.description
    .player-extra
      .player-comments
        %h3 Comments
        .fb-comments-wrapper
          .fb-comments{:'data-href'=>"#{request.protocol}#{request.host_with_port}#{request.fullpath}", :'data-num-posts'=>"5", :'data-width'=>"600", :'data-colorscheme'=>"white"}
        .social-connect
          .social#social-fb
            .fb-like{:'data-href'=>"#{request.protocol}#{request.host_with_port}#{request.fullpath}", :'data-send'=>"false", :'data-layout'=>"button_count", :'data-width'=>"450", :'data-show-faces'=>"false"}
          .social#social-tw
            %a{:href=>"https://twitter.com/share", :class=>"twitter-share-button", :'data-via'=>"TurnChannel", :'data-size'=>"large", :'data-hashtags'=>"turnchannel", :'data-dnt'=>"true"} Tweet
      .player-related-mixes
        %h3 Related Mixes
        - @related_mixes.each do |mix|
          .player-related-mix
            = mix.name

