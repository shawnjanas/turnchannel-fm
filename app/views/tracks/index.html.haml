.tracks-container
  - @tracks.each_with_index do |track, i|
    - style = ''
    - if i % 3 == 2
      - style = 'margin-right: 0;'
    .track{:style => style}
      %a{:href => track_url(track.id)}
        = image_tag track.artwork_url.gsub('large','t300x300')
        .track-stats
          .track-plays
            â–º
            = track.plays
        .track-info
          .track-artist
            = track.artist
          .track-title
            = track.title
